<div id="modal__contents">
  <div id="modal__contents-signin">
    <%= form_for(@user, url: new_user_session_path, format: 'json', html: {id: 'modal_signin'} ) do |f| %>
      <div>
        <%= f.email_field :email, autofocus: true, :placeholder => 'メールアドレスを入力' %>
      </div>
      <div>
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワードを入力' %>
      </div>
      <div class="col-xs-6"><%= f.check_box :remember_me %> <%= f.label :パスワードを記憶 %>
      </div>

      <div class="col-xs-6">パスワードを忘れましたか？</div>
      <div class="submit">
        <%= f.submit "ログイン", class: "create_user" %>
      </div>
    <% end %>
    <div>アカウントをお持ちではないですか？</div>
    <div class="modal__open-signup">登録</div>
    <div class="modal-close">閉じる</div>
  </div>
</div>
