<div id="modal__contents">
  <div id="modal__contents-signup">
    <%= form_for(@user, url: user_registration_path, format: 'json', html: {id: 'modal_signup'} ) do |f| %>

      <div class="label"><%= f.label '名前' %><br />
        <%= f.text_field :name, placeholder: '名前を入力' %>
      </div>

      <div class="label"><%= f.label 'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力' %>
      </div>

      <div class="label"><%= f.label 'パスワード' %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワードを入力' %>
      </div>

      <div class="label"><%= f.label 'パスワード確認' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: 'パスワードを入力（確認）' %>
      </div>

      <div>
        <%= f.submit '登録する', class: 'create_user' %>
      </div>
    <% end %>
    <div>アカウントをお持ちですか？</div>
    <div class="modal__open-signin">ログイン</div>
    <div class="modal-close">閉じる</div>
  </div>
</div>
